<%- include('partials/header') %>



          <!-- Makes POST request to /login route -->
          <form class="form-group text-center"action="/login" method="POST">
            <img class="mb-4" src="https://www.lawof.in/wp-content/uploads/2019/08/manipal-university-jaipur-logo-11-237x300.png" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Please Login</h1>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="inputEmail" class="form-control top" placeholder="Email address" name = "username" required autofocus>
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control bottom" placeholder="Password" name = "password"required>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
            <div class=" text-center middle">


              <div class=" lol card social-block text-middle">
                <div class="card-body">
                  <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
                    <i class="fab fa-google"></i>
                    Sign In with Google
                  </a>
                </div>
              </div>
        </div>
          </form>

